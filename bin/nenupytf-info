import argparse

from nenupytf.read import ObsRepo


if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument(
        '-o',
        '--obs',
        type=str,
        default='/.',
        help='Observation directory',
        required=False
        )
    args = parser.parse_args()

    spec = ObsRepo(repo=args.obs)
    spec.info()